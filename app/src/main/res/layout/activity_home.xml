<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".HomeActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/effect1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Greyscale" />

        <Button
            android:id="@+id/effect2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gaussian Blur" />

        <Button
            android:id="@+id/effect3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Laplacian" />

        <Button
            android:id="@+id/effect4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scharr" />

        <Button
            android:id="@+id/effect5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pyrdown" />

        <Button
            android:id="@+id/effect6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edge Detection" />

        <Button
            android:id="@+id/default_camera"
            android:layout_width="match_parent"
            android:layout_height="121dp"
            android:text="Default Camera" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>